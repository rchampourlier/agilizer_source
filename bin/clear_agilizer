#!/usr/bin/env ruby

# Clear Agilizer's issues (not JiraCache's) and performs a full sync
# from JiraCache's data.
#
# Usage:
#     bin/clear_agilizer

# Load dependencies
require 'rubygems'
require 'bundler/setup'

$LOAD_PATH.unshift File.expand_path('../..', __FILE__)
require 'config/boot'

require 'agilizer/issue'
Agilizer::Issue.destroy_all
